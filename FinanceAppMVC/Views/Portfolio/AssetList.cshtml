@model IEnumerable<FinanceAppMVC.Models.Asset>
@{
    int portfolioID = 0;
    if (Model.Count() > 0)
    {
        portfolioID = Model.First().PortfolioID;
    }

    var ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "AssetList",
        Confirm = "Are you sure you want to delete this asset?",
        HttpMethod = "POST",
        LoadingElementId = "loader"
    };

    var ajaxOptions_AssetStats = new AjaxOptions
    {
        UpdateTargetId = "CalculateAssetStats",
        HttpMethod = "POST",
        LoadingElementId = "loader"
    };
    int i = 0;
}

<script type="text/javascript">
    $(document).ready(function() 
    {
        var weightSum = 0;
        $("table input:text").each(function () {
            weightSum += parseFloat($(this).val());
        });
        if (Math.abs(1 - weightSum) <= .001) {
            $("#portfolioStatistics").show();
        }

        if ($("#CAPM").attr('checked') == "checked")
        {
            $("label").css('visibility', 'visible');
            marker = $('<span />').insertBefore('#MRP');
            $('#MRP').detach().attr('type', 'text').insertAfter(marker).focus();
            marker.remove();
            marker = $('<span />').insertBefore('#RiskFreeRate');
            $('#RiskFreeRate').detach().attr('type', 'text').insertAfter(marker).focus();
            marker.remove();
        }

        $("#stats").bind("click", function ()
        {
            var weights = [];
            var weightSum = 0;
            $("table input:text").each(function () {
                weights.push({ symbol: $(this).attr("id"), weight: $(this).val() });
                weightSum += parseFloat($(this).val());
            });

            if (Math.abs(1 - weightSum) > .001) {
                alert("Please ensure weights add up to 1.");
            }
            else {
                $.ajax({
                    url: '@Url.Action("SetPortfolioAllocation")',
                    type: 'POST',
                    data: { portfolioId: @portfolioID, weightList: JSON.stringify(weights) },
                    success: function(response) {
                        alert(response.Message);
                        if (response.StatusCode == 0) {
                            $("#portfolioStatistics").show("slow");
                        }
                    }
                });
            }
        });

        $("#CAPM").click(function() {
            $("label").css('visibility', 'visible');
            marker = $('<span />').insertBefore('#MRP');
            $('#MRP').detach().attr('type', 'text').insertAfter(marker).focus();
            marker.remove();
            marker = $('<span />').insertBefore('#RiskFreeRate');
            $('#RiskFreeRate').detach().attr('type', 'text').insertAfter(marker).focus();
            marker.remove();
        });

        $("#Historical").click(function() {
            $("label").css('visibility', 'hidden');
            marker = $('<span />').insertBefore('#RiskFreeRate');
            $('#RiskFreeRate').detach().attr('type', 'hidden').insertAfter(marker).focus();
            marker.remove();
            marker = $('<span />').insertBefore('#MRP');
            $('#MRP').detach().attr('type', 'hidden').insertAfter(marker).focus();
            marker.remove();
        });

        $(".formAnchor").click(function() {
            var meanRateMethod = $('<input>').attr({type: 'hidden', name: 'meanRateMethod', value: $("[name='meanRateMethod']:checked").val()});
            var expectedRateMethod = $('<input>').attr({type: 'hidden', name: 'expectedRateMethod', value: $("[name='expectedRateMethod']:checked").val()});
            var riskFreeRate = $('<input>').attr({type: 'hidden', name: 'riskFreeRate', value: $("#RiskFreeRate").val()});
            var MRP = $('<input>').attr({type: 'hidden', name: 'MRP', value: $("#MRP").val()});
            $(this).parent('form').append($(meanRateMethod));
            $(this).parent('form').append($(expectedRateMethod));
            $(this).parent('form').append($(riskFreeRate));
            $(this).parent('form').append($(MRP));
            $(this).parent('form').submit();
        });
    });
</script>

<div id="loader" style="display: none">
    <img src="~/Images/ajax-loader.gif" /></div>
<h2>My Assets</h2>

@if (Model.Count() > 0)
{
    using (Ajax.BeginForm("CalculateAssetStats", new { id = Model.ToList().First().PortfolioID, date = Model.ToList().First().Portfolio.DefaultStartDate.ToString() }, ajaxOptions_AssetStats))
    { 
        <h3>Mean Rate of Return Calculation Method:</h3>
        if (Model.First().Portfolio.isSimple)
        {
            <input type="radio" name="meanRateMethod" value="Simple" checked="checked" style="width:auto; margin:0 5px 0 50px"/>@:Simple<br />
            <input type="radio" name="meanRateMethod" value="Logarithmic" style="width:auto; margin:0 5px 0 50px"/>@:Logarithmic<br />
        }
        else
        {
            <input type="radio" name="meanRateMethod" value="Simple" style="width:auto; margin:0 5px 0 50px"/>@:Simple<br />
            <input type="radio" name="meanRateMethod" value="Logarithmic" checked="checked" style="width:auto; margin:0 5px 0 50px"/>@:Logarithmic<br />
        }

        <h3>Expected Annualized Rates of Return Calculation Method:</h3>
        if (Model.First().Portfolio.isCAPM)
        {
            <input type="radio" name="expectedRateMethod" id="Historical" value="Historical" style="width:auto; margin:0 5px 0 50px"/>@:Historical<br />
            <input type="radio" name="expectedRateMethod" id="CAPM" value="CAPM" checked="checked" style="width:auto; margin:0 5px 0 50px"/>@:CAPM<br />
        }
        else
        {
            <input type="radio" name="expectedRateMethod" id="Historical" value="Historical" checked="checked" style="width:auto; margin:0 5px 0 50px"/>@:Historical<br />
            <input type="radio" name="expectedRateMethod" id="CAPM" value="CAPM" style="width:auto; margin:0 5px 0 50px"/>@:CAPM<br />
        }
        
        <label for="RiskFreeRate" id="RiskFreeRate_Label" style="display:inline; font-size:1em; font-weight:400; visibility:hidden">Risk Free Rate: </label>
        <input type="hidden" id="RiskFreeRate" class="input" name="riskFreeRate" style="width:30px; margin-right:50px;" value="@Model.First().Portfolio.riskFreeRate" />
        <label for="MRP" id="MRP_Label" style="display:inline; font-size:1em; font-weight:400; visibility:hidden">MRP: </label>
        <input type="hidden" id="MRP" class="input" name="MRP" style="width:30px;" value="@Model.First().Portfolio.MRP"/>
    
        <input type="submit" value="Calculate Asset Statistics" />
    }



}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th></th>
        <th></th>
        @if (Model.Count() > 0)
        {
            <th>Weight</th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Symbol)
            </td>
            <td>
                @if (item.Portfolio.statsCalculated)
                {
                    <form action="@Url.Action("Asset", "Portfolio")">
                        <input type="hidden" name="id" value="@item.ID" />
                        <a href="javascript:void(0)" class="formAnchor">Details</a>
                    </form>
                }
            </td>
            <td>
                @Ajax.ActionLink("Delete", "DeleteAsset", new { id = item.ID }, ajaxOptions)
            </td>
            <td>
                <div class="editor-field">
                    <input type="text" id="@String.Format("{0}", item.Symbol)" style="width:50px;" value="@item.Weight" />
                </div>
            </td>
        </tr>
                i++;
    }

    @if (Model.Count() > 0)
    {     
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <button id="stats">Save</button>
        </td>
    </tr>
    <tr>
        <td colspan="3">
            <form action="@Url.Action("RiskAnalysis", "Portfolio")">
                    <input type="hidden" name="id" value="@portfolioID" />
                    <a href="javascript:void(0)" class="formAnchor" style="font-size:medium; font-weight:700;">View Risk Analysis</a>
                </form>
        </td>
        <td id="portfolioStatistics" style="display:none">
            <form action="@Url.Action("PortfolioStatistics", "Portfolio")">
                    <input type="hidden" name="id" value="@portfolioID" />
                    <a href="javascript:void(0)" class="formAnchor" style="font-size:medium; font-weight:700;">View Portfolio Statistics</a>
                </form>
        </td>
    </tr>
    }

</table>