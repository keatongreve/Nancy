@model IEnumerable<FinanceAppMVC.Models.Asset>
@{
    var ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "AssetList",
        Confirm = "Are you sure you want to delete this asset?",
        HttpMethod = "POST",
        LoadingElementId = "loader"
    };
    int i = 0;
}

<script type="text/javascript">
    $(document).ready(function() 
    {
        $("#stats").bind("click", function ()
        {
            var weights = [];
            var weightSum = 0;
            $("table input:text").each(function () {
                weights.push(
                    { symbol: $(this).attr("id"), weight: $(this).val() }
                    );
                weightSum += parseFloat($(this).val());
            });

            if (Math.abs(1 - weightSum) >= .001) {
                alert("Please ensure weights add up to 1");
            }
            else {
                $("#weightList").val(JSON.stringify(weights));
                $("#weightsForm").submit();
            }
        });
    });
</script>

<div id="loader" style="display:none"><img src="~/Images/ajax-loader.gif" /></div>
<h2>My Assets</h2>

    @using (Html.BeginForm("PortfolioStatistics", "Portfolio", FormMethod.Get, new { id = "weightsForm" }))
    {
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th></th>
        <th></th>
        @if (Model.Count() > 0)
        {
            <th>Weight</th>
        }
    </tr>
    
        @foreach (var item in Model)
        {
           <tr>
               <td>
                   @Html.DisplayFor(modelItem => item.Symbol)
               </td>
               <td>
                   @Html.ActionLink("Details", "Asset", new { id = item.ID })
               </td>
              <td>
                   @Ajax.ActionLink("Delete", "DeleteAsset", new { id = item.ID }, ajaxOptions) 
               </td>
               <td>
                    <div class="editor-field">
                        <input type="text" id="@String.Format("{0}", item.Symbol)" style="width:50px;" value="@item.Weight" />
                     </div>
                </td>
           </tr>
            i++;
        }

        <tr>
        @if (Model.Count() > 0)
        {
            
            <td colspan="3">
                <h4>@Html.ActionLink("View Risk Analysis", "RiskAnalysis", new { id = Model.First().PortfolioID })</h4>
            </td>
            <td>
                @*<input type="submit" name="statsButton" value="View Portfolio Statistics" />*@
                <input type="hidden" id="weightList" name="weightList" />
                <input type="hidden" value="@Model.First().PortfolioID" name="portfolioID" />
                <a href="#" id="stats">View Portfolio Statistics</a>
            </td>
        }
        </tr>

    </table>
    
    }

